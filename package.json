{
  "name": "phaser-scrolling-camera",
  "version": "1.0.2",
  "description": "Class for Phaser 3 framework, adding the capacity of vertical scrolling by dragging or using the mouse wheel.",
  "source": "src/scrollcam.ts",
  "main": "dist/scrollcam.cjs.js",
  "module": "dist/scrollcam.esm.js",
  "umd:main": "dist/scrollcam.min.js",
  "types": "dist/scrollcam.d.ts",
  "scripts": {
    "build:dev": "microbundle -f umd --name ScrollingCamera",
    "build:dist": "microbundle -f es,cjs,umd --name ScrollingCamera --sourcemap false",
    "dev": "microbundle watch -f umd --name ScrollingCamera"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jjcapellan/Phaser3-ScrollingCamera.git"
  },
  "keywords": [
    "phaser3",
    "phaser",
    "camera",
    "scroll",
    "drag",
    "mouse",
    "wheel"
  ],
  "author": "Juan Jose Capellan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jjcapellan/Phaser3-ScrollingCamera/issues"
  },
  "homepage": "https://github.com/jjcapellan/Phaser3-ScrollingCamera#readme",
  "devDependencies": {
    "microbundle": "^0.12.4",
    "phaser": "^3.24.1"
  }
}
